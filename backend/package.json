{
  "name": "backend",
  "version": "0.1.0",
  "description": "ConvoMark backend application and Telegram bot",
  "author": "Matteo Joliveau <matteojoliveau@gmail.com>",
  "license": "Apache-2.0",
  "engines": {
    "node": "^12.0",
    "yarn": "^1.19"
  },
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:MatteoJoliveau/convomarkbot.git"
  },
  "files": [
    "README.md",
    "index.js",
    "index.d.ts",
    "dist",
    "src",
    "!*/__tests__"
  ],
  "scripts": {
    "build:apidocs": "lb-apidocs",
    "build": "lb-tsc es2017 --outDir dist",
    "build:watch": "lb-tsc --watch",
    "clean": "lb-clean dist",
    "console": "node --experimental-repl-await -r dotenv/config ./dist/console",
    "lint": "yarn prettier:check && yarn eslint",
    "lint:fix": "yarn eslint:fix && yarn prettier:fix",
    "prettier:cli": "lb-prettier \"**/*.ts\" \"**/*.js\"",
    "prettier:check": "yarn prettier:cli -l",
    "prettier:fix": "yarn prettier:cli --write",
    "eslint": "lb-eslint --report-unused-disable-directives .",
    "eslint:fix": "yarn eslint --fix",
    "pretest": "yarn clean && yarn build",
    "test": "lb-mocha --allow-console-logs \"dist/__tests__\" --exit",
    "posttest": "yarn lint",
    "test:dev": "lb-mocha --allow-console-logs dist/__tests__/**/*.js && yarn posttest",
    "docker:build": "docker build -t matteojoliveau/convomark:latest .",
    "docker:run": "docker run -p 3000:3000 -d matteojoliveau/convomark:latest",
    "migrate": "node -r dotenv/config ./dist/migrate",
    "db:migrate": "node -r dotenv/config ./node_modules/typeorm/cli.js migration:run",
    "db:rollback": "node -r dotenv/config ./node_modules/typeorm/cli.js migration:revert",
    "db:drop": "node -r dotenv/config ./node_modules/typeorm/cli.js schema:drop",
    "prestart": "yarn clean && yarn build",
    "start": "node -r pino-debug -r dotenv/config .",
    "start:prod": "node .",
    "start:watch": "nodemon",
    "prepublishOnly": "yarn test"
  },
  "dependencies": {
    "@loopback/authentication": "^2.1.1",
    "@loopback/boot": "^1.4.0",
    "@loopback/context": "^1.19.0",
    "@loopback/core": "^1.8.1",
    "@loopback/openapi-v3": "^1.6.1",
    "@loopback/repository": "^1.6.1",
    "@loopback/repository-json-schema": "^1.6.1",
    "@loopback/rest": "^1.15.0",
    "@loopback/rest-explorer": "^1.2.1",
    "@loopback/service-proxy": "^1.2.1",
    "@sentry/node": "^5.4.3",
    "apollo-server": "^2.6.3",
    "date-fns": "^1.30.1",
    "graphql": "^14.3.1",
    "graphql-tools": "^4.0.4",
    "lodash": "^4.17.11",
    "loopback-connector-postgresql": "^3.6.1",
    "passport-jwt": "^4.0.0",
    "pino": "^5.12.2",
    "pino-clf": "^1.0.6",
    "pino-debug": "^1.3.0",
    "slug": "^1.1.0",
    "telegraf": "^3.30.1",
    "telegraf-i18n": "^6.5.0",
    "telegraf-session-redis": "^5.1.0",
    "telegraf-widget": "^0.1.0",
    "typeorm": "^0.2.25",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@loopback/build": "^1.7.1",
    "@loopback/eslint-config": "^1.1.1",
    "@loopback/testlab": "^1.5.0",
    "@types/graphql": "^14.2.0",
    "@types/node": "^10.11.2",
    "@types/passport-jwt": "^3.0.1",
    "@types/pino": "^5.8.8",
    "@types/slug": "^0.9.1",
    "@types/uuid": "^3.4.4",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.9.0",
    "dotenv": "^8.0.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-eslint-plugin": "^2.1.0",
    "eslint-plugin-mocha": "^5.3.0",
    "nodemon": "^1.19.1",
    "pino-pretty": "^3.1.0",
    "typescript": "~3.5.1"
  }
}
